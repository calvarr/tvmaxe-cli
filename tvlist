Sopcast_xml () {
$DIALOG --infobox "Actualizez liste.. \n Sopcast_xml" 6 25
wget -qO - http://www.sopcast.com/chlist.xml|sed 's/<name/\n<name/g;s/<\/item/\n<\/item/g;s/ /_/g;s/</ <  /g;s/>/ > /g'|awk '{print $4,$NF}'|grep sop:// > $HOME/.tvmaxe-cli/playlist/.Sopcast_xml.tvro
}

SopcastX () {
	$DIALOG --infobox "Actualizez liste.. \n Sopcast_xml" 6 25
	wget -qO - http://streams.magazinmixt.ro/xsopcast.xml|sed 's/<name/\n<name/g;s/<\/item/\n<\/item/g;s/ /_/g;s/</ <  /g;s/>/ > /g'|awk '{print $4,$NF}'|grep sop:// > $HOME/.tvmaxe-cli/playlist/.SopcastX.tvro
}

