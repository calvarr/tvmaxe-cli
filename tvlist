#! /bin/bash

if [ -f /$HOME/.config_tvmaxe-cli ]
then
    source $HOME/.config_tvmaxe-cli
else
	source config
fi


Romania (){
$DIALOG --infobox "Actualizez liste.. \n Romania" 6 25
wget -qO - https://raw.github.com/calvarr/tvmaxe-cli/master/playlist/.Romaniatv.tvro >  $HOME/.tvmaxe-cli/playlist/.Romaniatv.tvro
}

International () {
$DIALOG --infobox "Actualizez liste.. \n International" 6 25
wget -qO - https://raw.github.com/calvarr/tvmaxe-cli/master/playlist/.International.tvro > $HOME/.tvmaxe-cli/playlist/.International.tvro
}

