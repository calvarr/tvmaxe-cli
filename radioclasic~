#!/bin/bash -x

source config

listaradioclasic=`cat $HOME/.tvmaxe-cli/playlist/.radioclasic.tvro|awk '{print $1,"|"}'`
##########################################
mkdir -p /tmp/tvmaxe-cli
if [ ! -f $HOME/.tvmaxe-cli/playlist/.radioclasic.tvro ];
then
	wget -qO - http://pastebin.com/raw.php?i=sGuVrhCy|sed 's/||/\n/g;s/ /_/g;s/|/ /g'|awk '{print $2"|"$4}'|sort -d|sed 's/|/ /g'|sed '1,2d'  > $HOME/.tvmaxe-cli/playlist/.radioclasic.tvro
fi
radioclasic (){
	$DIALOG --backtitle "tvmaxe-cli" \
	  --title "RadioClasic" --clear \
          --menu ":::" 30 35 30 $listaradioclasic 2> $tempfile
      	selectie0=$?
	if [ "$selectie0" == "255" ]||[ "$selectie0" == "1" ]; then
   		exit 0
 	fi
nume_post_tv=`cat $tempfile`
nr_post_tv=`cat $HOME/.tvmaxe-cli/playlist/.radioclasic.tvro|sed -n "/$nume_post_tv/="`
cat $HOME/.tvmaxe-cli/playlist/.radioclasic.tvro|sed -n "${nr_post_tv}p" > /tmp/tvmaxe-cli/adr
	    }
#########################################
radioclasic
sleep 0.5
./filtrutv

