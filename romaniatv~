#!/bin/bash -x

source config

listatvro=`cat $HOME/.tvmaxe-cli/playlist/.romaniatv.tvro|awk '{print $1,"|"}'`

##########################################
mkdir -p /tmp/tvmaxe-cli
if [ ! -f $HOME/.tvmaxe-cli/playlist/.romaniatv.tvro ];
then
	wget -qO - http://tv-maxe.org/subscriptions/cli.php?db=Romania|sed 's/|||/\n/g'>/tmp/tvmaxe-cli/tmp2
	cat /tmp/tvmaxe-cli/tmp2|sed 's/*/\n/g'|sort -d|sed "s/||/ /g;s/spice:/rtmp:/g;s/%key%/${keyspice}/g;s/\%/\&/g;s/key//g">	$HOME/.tvmaxe-cli/playlist/.romaniatv.tvro
fi
##########################################
romaniatv (){
	$DIALOG --backtitle "tvmaxe-cli" \
	  --title "RomaniaTV" --clear \
          --menu ":::" 30 35 30 $listatvro 2> $tempfile
      	selectie0=$?
	if [ "$selectie0" == "255" ]||[ "$selectie0" == "1" ]; then
   		exit 0
 	fi
nume_post_tv=`cat $tempfile`
nr_post_tv=`cat $HOME/.tvmaxe-cli/playlist/.romaniatv.tvro|sed -n "/$nume_post_tv/="`
cat $HOME/.tvmaxe-cli/playlist/.romaniatv.tvro|sed -n "${nr_post_tv}p" > /tmp/tvmaxe-cli/adr

	    }
##########################################

romaniatv
./filtrutv
