		#pagini_gen=`wget -qO - $genul --user-agent="Mozilla/5.0 (Windows NT 5.2; rv:2.0.1) Gecko/20100101 Firefox/4.0.1" |grep "Go to page"|sed '$d'|sed 's/title=/\n/g'|sed -n '$p'|sed 's/ /_/g;s/"/ /g;s/of_/ /g'|awk '{print $2}'`

		pagini_gen=`wget -qO - $genul --user-agent="Mozilla/5.0 (Windows NT 5.2; rv:2.0.1) Gecko/20100101 Firefox/4.0.1" |grep "numarpagini"|sed -n '$p'|sed 's/<[^>]*>/ /g'|awk '{print $NF}'`

		cumulpg=`echo $genul|sed 's/-1.html//'`
		i=1
