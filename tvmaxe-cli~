#!/bin/bash -x
cd $HOME/'.'tvmaxe-cli
source config
./ceas &
gui () {
test_tty=`echo $DISPLAY X|awk '{print $2}'`
if [[ "$test_tty" = "X" ]];then
  if [ `builtin type -p xdialog` ];then DIALOG=xdialog
  elif [ `builtin type -p Xdialog` ];then DIALOG=Xdialog
  elif [ `builtin type -p gdialog` ];then DIALOG=gdialog
  elif [ `builtin type -p kdialog` ];then DIALOG=kdialog
  else
  DIALOG=dialog
  fi
else
  DIALOG=dialog
fi
}
nogui () {
DIALOG=dialog
}
$interfata
export DIALOG
tempfile=`tempfile 2>/dev/null` || tempfile=/tmp/tvmaxe-cli/capclitmp$$
export tempfile
trap "rm -f $tempfile" 0 1 2 5 15
trap "rm -rf /tmp/tvmaxe-cli" 0 1 2 5 15
mkdir -p /tmp/tvmaxe-cli

if [[ "$1" != "" ]]; then
echo "tvmaxe-cli $1" > /tmp/tvmaxe-cli/adr
echo $format_video tv > /tmp/tvmaxe-cli/format
./adr_externa
fi

until [ "$selectie0" == "1" ]; do

  $DIALOG --backtitle "tvmaxe-cli" \
	  --title "| Meniu |" --clear \
          --menu ":::" 25 30 25 \
	"01" "TV on-line" \
	"02" "Radio Ro" \
	"03" "Radio Md." \
	"04" "Radio clasic" \
	"05" "Radio mix" \
	"06" "Shoutcast" \
	"07" "Podcast*" \
	"08" "Filme" \
	"09" "Youtube" \
	"10" "Divertisment" \
	"11" "Favorite" \
	"12" "Captura web_tv" \
	"13" "Configurare" \
	"14" "Actualizare*" \
	"15" "Parasiti" 2>$tempfile
  selectie0=$?
  selectat=`cat $tempfile`
  
  case "$selectat" in
	01) echo $format_video tv > /tmp/tvmaxe-cli/format ; ./TV on-line;;
	02) echo $format_audio radio > /tmp/tvmaxe-cli/format ; ./radioro;;
	03) echo $format_audio radio > /tmp/tvmaxe-cli/format ; ./radiomd;;
	04) echo $format_audio radio > /tmp/tvmaxe-cli/format ; ./radioclasic;;
	05) echo $format_audio radio > /tmp/tvmaxe-cli/format ; ./radiomix;;
	06) echo $format_audio radio > /tmp/tvmaxe-cli/format ; ./shoutcast;;
	07) echo $format_audio radio > /tmp/tvmaxe-cli/format ; ./podcast;;
	08) ./filme;;
	09) echo "Youtube" > /tmp/tvmaxe-cli/adr ; ./youtube;;
	10) ./divertisment;;
	11) ./favorite;;
	12) ./capstream;;
	13) ./configurare;;
	14) ./actualizare;;
	15) killall ceas;exit 0;;
  esac

  if [ "$selectie0" == "255" ]||[ "$selectie0" == "1" ]; then
   killall ceas
   exit 0
  fi
done

